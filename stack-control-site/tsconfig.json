{
  "compilerOptions": {
    "outDir": "./dist/",
    "noImplicitAny": true,
    "module": "ES2020",
    "target": "es5",
    "jsx": "react",
    "allowJs": true,
    "moduleResolution": "bundler",
    "baseUrl": ".",
    "skipLibCheck": true,
    "paths": {
      "@/*": ["src/*"],
      "react": ["src/react"],
      "@@/*": ["resources/*"],
    },
    "plugins": [{ "name": "typescript-plugin-css-modules" }]
  }
}